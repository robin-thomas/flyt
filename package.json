{
  "name": "flyt",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "homepage": "/",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "now-build": "npm run build && mv build dist && sh scripts/swagger.sh",
    "deploy": "npm run contract:deploy && npm run dapp:deploy",
    "dapp:deploy": "now",
    "dapp:test": "npm run dapp:api:test",
    "dapp:api:test": "truffle compile && NODE_ENV=test mocha test/api/server.js --exit",
    "dapp:api:coverage": "nyc npm run dapp:api:test",
    "contract:deploy": "node ./scripts/deploy.js truffle",
    "contract:test": "truffle test test/truffle/flyt.js",
    "contract:coverage": "truffle run coverage --file=test/truffle/flyt.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robin-thomas/flyt.git"
  },
  "author": "Robin Thomas <robinthomas2591@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robin-thomas/flight/issues"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.1",
    "@react-pdf/renderer": "^1.6.7",
    "@truffle/hdwallet-provider": "1.0.22",
    "bootstrap": "^4.3.1",
    "date-fns": "^2.4.1",
    "express": "^4.17.1",
    "keyv": "^3.1.0",
    "lodash": "^4.17.15",
    "lzutf8": "^0.5.5",
    "mdbreact": "^4.21.0",
    "node-fetch": "^2.6.0",
    "node-schedule": "^1.3.2",
    "react": "^16.10.2",
    "react-bootstrap": "^1.0.0-beta.14",
    "react-datepicker": "^2.9.6",
    "react-dom": "^16.10.2",
    "react-scripts": "^3.2.0",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2",
    "web3": "^1.2.1"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.3",
    "@truffle/contract": "^4.0.37",
    "bn.js": "^4.11.8",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chainlink": "^0.7.6",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-node": "^10.0.0",
    "husky": "^3.0.9",
    "link_token": "^1.0.6",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.34",
    "solidity-coverage": "^0.7.0-beta.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json,md,sol}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "react-app"
    ],
    "rules": {
      "no-console": [
        "off"
      ],
      "no-empty": [
        "off"
      ],
      "no-constant-condition": [
        "off"
      ],
      "no-useless-catch": [
        "off"
      ],
      "node/no-missing-require": [
        "error"
      ],
      "node/no-missing-import": [
        "error"
      ],
      "node/no-unpublished-import": [
        "warn"
      ],
      "node/no-unpublished-require": [
        "warn"
      ],
      "node/no-unsupported-features/es-syntax": [
        "off"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
